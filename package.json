{
  "name": "sol-flywheel",
  "version": "1.0.0",
  "private": true,
  "description": "Solana Flywheel - LP fees to SOL rewards distribution system",
  "workspaces": [
    "programs/*",
    "backend",
    "keeper",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rimraf node_modules",
    "anchor:build": "cd programs && anchor build",
    "anchor:test": "cd programs && anchor test",
    "anchor:deploy": "cd programs && anchor deploy",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "keeper:start": "cd keeper && npm run start",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:dev": "cd backend && npm run dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "turbo": "^1.11.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.2.0"
}


